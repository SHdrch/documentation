.content {
  font-size: 30px
}

@font-face {
  font-family: 'Open Sans Condensed';
  font-style: normal;
  font-weight: 300;
  src: local('Open Sans Condensed Light'), local('OpenSansCondensed-Light'), url(https://fonts.gstatic.com/s/opensanscondensed/v13/z7NFdQDnbTkabZAIOl9il_O6KJj73e7Ff1GhDuXMRw.woff2) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

.site-name {
  font-family: 'Open Sans Condensed', sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.3em;
  font-size: 28px;
}

.theme-default-content:not(.custom) img,video {
  max-width: 90%;
  margin-top: 40px;
  margin-bottom: 60px;
}

img,video {
  filter: drop-shadow(0px 10px 21px rgba(0, 0, 0, 0.5));
  display: block;
  margin-left: auto;
  margin-right: auto;
}